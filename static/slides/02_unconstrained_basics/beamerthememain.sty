%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Block environment using tcolorbox
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Define tcolorbox styles for blocks
\tcbset{
    beamerbox/.style={
        enhanced,
        colback=light,%
        drop shadow=main!50!light,
        boxrule=1pt,
        sharp corners,
        left=8pt,
        right=8pt,
        top=8pt,
        bottom=8pt,
        colback=light,
        coltitle=text-light,
        colbacktitle=main,
        fonttitle=\bfseries,
        toptitle=6pt,
        bottomtitle=6pt,
        lefttitle=8pt,
        righttitle=8pt,
        attach boxed title to top left={yshift=-2mm, xshift=-2mm},
        boxed title style={
            enhanced,
            boxrule=0pt,
            sharp corners,
        }
    },
    beamerboxalert/.style={
        beamerbox,
        colbacktitle=bold,
        coltitle=text-light,
    },
    beamerboxexample/.style={
        beamerbox,
        colbacktitle=c2,
        coltitle=text-light,
    }
}

% Redefine block environments
\setbeamertemplate{block begin}{%
    \begin{tcolorbox}[beamerbox, title=\insertblocktitle]
}
\setbeamertemplate{block end}{%
    \end{tcolorbox}
}

\setbeamertemplate{block alerted begin}{%
    \begin{tcolorbox}[beamerboxalert, title=\insertblocktitle]
}
\setbeamertemplate{block alerted end}{%
    \end{tcolorbox}
}

\setbeamertemplate{block example begin}{%
    \begin{tcolorbox}[beamerboxexample, title=\insertblocktitle]
}
\setbeamertemplate{block example end}{%
    \end{tcolorbox}
}

